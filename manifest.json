{
  "manifest_version": 2,
  
  "name": "AnimeTrackerStorage",
  "description": "Keep up to date with your Anime! Add the anime you're watching to the list it'll track what episode you are on and when its up!",
  "version": "1.4",
  "icons": { "16": "icon.png",
           "48": "icon48.png",
          "128": "icon128.png" },    
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["jquery-2.0.2.js","jquery-2.0.2.min.js",  "script.js"]
    }
  ],
  
  "background": {
    "scripts": ["jquery-2.0.2.js", "jquery-2.0.2.min.js", "eventPage.js" , "fetch-updates.js",  "script.js", "customupdates.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://query.yahooapis.com/; object-src 'self' " ,

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
          "storage",
          "http://*/",
          "notifications"
        ],
   "web_accessible_resources": [
   "jquery-2.0.2.min.map"
   ]
  
}