{
  "manifest_version": 2,
  
  "name": "AnimeTracker",
  "description": "Keep up to date with your Anime! Add the anime your watching to the list and it will keep track of what epsiode you are on!",
  "version": "1.0",
  
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["jquery-2.0.2.min.js",  "script.js","notify.min.js", "fetch-updates.js"]
    }
  ],
  
  "background": {
    "scripts": ["notify.min.js", "eventPage.js" , "fetch-updates.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://query.yahooapis.com/; object-src 'self' " ,

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
          "storage",
          "http://*/"
        ],
   "web_accessible_resources": [
   "jquery-2.0.2.min.map"
   ]
  
}