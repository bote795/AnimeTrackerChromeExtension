{
  "manifest_version": 2,
  
  "name": "AnimeTracker Storage",
  "description": "Keep up to date with your Anime!",
  "version": "1.0",
  
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["jquery-2.0.2.min.js", "script.js"]
    }
  ],
  
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
  
}