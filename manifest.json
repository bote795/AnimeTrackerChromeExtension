{
  "manifest_version": 2,
  "key": "copbfmolcnbonbkndookhieiipekikng",
  "name": "AnimeTrackerStorage",
  "description": "Keep up to date with your Anime! Add the anime you're watching to the list it'll track what episode you are on and when its up!",
  "version": "1.8",
  "icons": { "16": "assets/icon.png",
           "48": "assets/icon48.png",
          "128": "assets/icon128.png" },    
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["js/3d-party/jquery-2.0.2.js","js/3d-party/jquery-2.0.2.min.js",  "js/background/background.js"]
    }
  ],
  
  "background": {
    "scripts": ["js/3d-party/jquery-2.0.2.js", "js/3d-party/jquery-2.0.2.min.js", "js/eventPage.js" , "js/updateManagers/fetch-updates.js",  "js/background/chrome-background.js", "js/updateManagers/customupdates.js", "js/classes/Manager.js", "js/classes/AnimeEpisodeManager.js", "js/classes/UpdatesListManager.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://query.yahooapis.com/; object-src 'self' " ,

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
          "storage",
          "http://*/",
          "notifications"
        ],
   "web_accessible_resources": [
   "js/3d-party/jquery-2.0.2.min.map"
   ]
  
}