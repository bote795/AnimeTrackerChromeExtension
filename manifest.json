{
  "manifest_version": 2,
  
  "name": "AnimeTracker",
  "description": "Keep up to date with your Anime! Add the anime your watching to the list and it will keep track of what epsiode you are on!",
  "version": "1.0",
  
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["jquery-2.0.2.min.js", "script.js"]
    }
  ],
  
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
          "storage"
        ],
   "web_accessible_resources": [
   "jquery-2.0.2.min.map"
   ]
  
}